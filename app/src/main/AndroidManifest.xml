<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <!-- Permissions -->
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE" />
    <uses-permission android:name="android.permission.FOREGROUND_SERVICE_SPECIAL_USE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
    <uses-permission android:name="android.permission.VIBRATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <!-- Required for detecting overlay touches on older Android versions -->
    <uses-permission android:name="android.permission.ACTION_MANAGE_OVERLAY_PERMISSION" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Besu"
        tools:targetApi="31">

        <!-- 1. Main Dashboard -->
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Besu">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".SensorDebugActivity" />
        <!-- 2. Setup / Permission Wizard -->
        <activity
            android:name=".SetupActivity"
            android:exported="false"
            android:theme="@style/Theme.Besu" />

        <!-- 3. Watch Config Editor -->
        <activity
            android:name=".WatchEditorActivity"
            android:exported="false"
            android:label="Watch Editor"
            android:theme="@style/Theme.Besu" />

        <!-- 5. Overlay Service (TTS & Visuals) -->
        <service
            android:name=".OverlayService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="overlay_display" />
        </service>

        <!-- 6. Radial Menu Service (Input) -->
        <service
            android:name=".RadialMenuService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="accessibility_overlay" />
        </service>

        <!-- 7. Wear Listener (Sync & Commands) -->
        <service
            android:name=".WearListenerService"
            android:exported="true">
            <intent-filter>
                <action android:name="com.google.android.gms.wearable.MESSAGE_RECEIVED" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/besu" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/gesture" />
                <data android:scheme="wear" android:host="*" android:pathPrefix="/debug" />
            </intent-filter>
        </service>

        <!-- 8. Physical Tap Detection (Optional) -->
        <service
            android:name=".AccelerometerTapService"
            android:exported="false"
            android:foregroundServiceType="specialUse">
            <property
                android:name="android.app.PROPERTY_SPECIAL_USE_FGS_SUBTYPE"
                android:value="gesture_detection" />
        </service>

        <!-- 9. Accessibility Service (Required for Global Gestures) -->
        <service
            android:name=".AccessibilityGestureService"
            android:permission="android.permission.BIND_ACCESSIBILITY_SERVICE"
            android:exported="true">
            <intent-filter>
                <action android:name="android.accessibilityservice.AccessibilityService" />
            </intent-filter>
            <meta-data
                android:name="android.accessibilityservice"
                android:resource="@xml/accessibility_service_config" />
        </service>

    </application>

</manifest>