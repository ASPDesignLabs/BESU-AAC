<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CC000000">

    <!-- 1. SENTENCE BUILDER BAR -->
    <LinearLayout
        android:id="@+id/sentenceBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="top"
        android:orientation="horizontal"
        android:background="@android:color/transparent"
        android:padding="8dp"
        android:gravity="center_vertical"
        android:visibility="gone"
        android:elevation="20dp">

        <TextView
            android:id="@+id/tvSentence"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:paddingStart="8dp"
            android:textStyle="bold"
            android:hint="Select words..."
            android:textColorHint="#888888"
            android:shadowColor="#000000"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="4"/>

        <ImageButton
            android:id="@+id/btnPlaySentence"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_media_play"
            android:background="#00000000"
            app:tint="#4CAF50"
            android:contentDescription="Play Sentence"/>

        <ImageButton
            android:id="@+id/btnClearSentence"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@android:drawable/ic_input_delete"
            android:background="#00000000"
            app:tint="#FF5252"
            android:contentDescription="Backspace"/>
    </LinearLayout>

    <!-- 2. MAIN CONTENT AREA -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="60dp"
        android:paddingBottom="16dp">

        <!-- TOP ROWS (History/Context) -->
        <LinearLayout
            android:id="@+id/topRowsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:elevation="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/rowTop1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp" />
            </HorizontalScrollView>

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/rowTop2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp" />
            </HorizontalScrollView>
        </LinearLayout>

        <!-- PANIC BUTTON -->
        <TextView
            android:id="@+id/btnPanic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="4dp"
            android:text="ðŸ†˜"
            android:textSize="28sp"
            android:background="@null"
            android:padding="8dp"
            android:gravity="center"
            android:elevation="30dp"
            app:layout_constraintTop_toBottomOf="@id/topRowsContainer"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- RIGHT SIDEBAR (Grammar Roots) -->
        <ScrollView
            android:id="@+id/scrollSidebar"
            android:layout_width="80dp"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:scrollbars="none"
            app:layout_constraintTop_toBottomOf="@id/btnPanic"
            app:layout_constraintBottom_toTopOf="@id/bottomRowsContainer"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:id="@+id/sidebarRight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingTop="4dp"
                android:paddingBottom="10dp"/>
        </ScrollView>

        <!-- BOTTOM ROWS (Action/Modifiers + Controls) -->
        <LinearLayout
            android:id="@+id/bottomRowsContainer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp"
            android:elevation="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Row 3 -->
            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">
                <LinearLayout
                    android:id="@+id/rowBottom1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="4dp" />
            </HorizontalScrollView>

            <!-- Control Cluster + Row 4 -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="bottom"
                android:padding="4dp">

                <!-- Vertical Control Station -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginEnd="8dp">

                    <!-- Icon Row -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center">

                        <TextView
                            android:id="@+id/btnHome"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ "
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textColor="#FFFFFF"
                            android:padding="8dp"
                            android:background="@null"
                            android:layout_marginEnd="4dp"/>

                        <TextView
                            android:id="@+id/btnSavedPhrases"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="â­"
                            android:gravity="center"
                            android:textSize="22sp"
                            android:textColor="#FFD700"
                            android:padding="8dp"
                            android:background="@null"/>
                    </LinearLayout>

                    <!-- Mode Toggle (Moved Here) -->
                    <Button
                        android:id="@+id/btnToggleMode"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:text="Instant"
                        android:textSize="9sp"
                        android:padding="0dp"
                        android:backgroundTint="#444444"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                        android:textColor="#CCCCCC"/>
                </LinearLayout>

                <!-- Row 4 Scroll -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">
                    <LinearLayout
                        android:id="@+id/rowBottom2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" />
                </HorizontalScrollView>
            </LinearLayout>
        </LinearLayout>

        <!-- SIDEBAR EXPANSION PANEL (Fly-out) -->
        <ScrollView
            android:id="@+id/grammarExpansionScroll"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="4dp"
            android:visibility="gone"
            android:scrollbars="none"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:elevation="15dp"
            app:layout_constraintTop_toTopOf="@id/scrollSidebar"
            app:layout_constraintBottom_toBottomOf="@id/scrollSidebar"
            app:layout_constraintEnd_toStartOf="@id/scrollSidebar">

            <LinearLayout
                android:id="@+id/grammarExpansionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
                android:gravity="end"/>
        </ScrollView>

        <!-- CENTER RADIAL MENU -->
        <com.example.besu.RadialMenuLayout
            android:id="@+id/radialContainer"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/topRowsContainer"
            app:layout_constraintBottom_toTopOf="@id/bottomRowsContainer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/scrollSidebar"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>